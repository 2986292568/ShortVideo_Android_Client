<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.dueeeke.videoplayer.player.IjkVideoView
        android:id="@+id/video_player"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginBottom="@dimen/dp_2"

        android:orientation="vertical"
        android:layout_height="wrap_content">
     <com.xuexiang.xui.widget.textview.autofit.AutoFitTextView
        android:id="@+id/tv_title"
         style="@style/Container"
        android:textSize="@dimen/dp_13"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:maxLines="2"
        app:autoSizeTextType="none"
        app:aftv_minTextSize="@dimen/dp_5"
        tools:text="这是一个标题"/>
        <View style="@style/horizontal_underline">

        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            style="@style/Container"
            >
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             >
         <ImageView
             android:layout_width="@dimen/dp_20"
             android:layout_height="@dimen/dp_20"
             android:src="@mipmap/item_preview_play"
             >
         </ImageView>
          <com.xuexiang.xui.widget.textview.autofit.AutoFitTextView
              android:layout_width="@dimen/dp_30"
              android:layout_height="wrap_content"
              android:singleLine="true"
              android:text="1234"
              android:layout_gravity="center"
              >

          </com.xuexiang.xui.widget.textview.autofit.AutoFitTextView>

         </LinearLayout>

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:orientation="horizontal"

         >
       <com.xuexiang.xui.widget.textview.supertextview.SuperButton
           style="@style/SuperButton.Blue.Small"
           android:text="1000"
           android:layout_gravity="center"
           android:drawableStart="@mipmap/icon_mark"
           >
       </com.xuexiang.xui.widget.textview.supertextview.SuperButton>

         <View
             android:layout_width="@dimen/dp_4"
             android:layout_height="@dimen/dp_0"></View>

         <com.xuexiang.xui.widget.textview.supertextview.SuperButton
             style="@style/SuperButton.Blue.Small"
             android:text="1000"
             android:layout_gravity="center"
             android:drawableStart="@mipmap/icon_like"
             >
         </com.xuexiang.xui.widget.textview.supertextview.SuperButton>

     </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>